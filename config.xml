<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.phonegap.seconnect"
    version   = "1.0.0">

	<gap:config-file platform="ios" parent="CFBundleShortVersionString">
<string>114</string>
</gap:config-file>
	
<name>Side-Effect Connect</name>

<description>
Explore what side-effects have been reported for your drug!
</description>

<author email="pharmdigital@gmail.com">
Gabriel Wong
</author>

<!--Permissions-->
<preference name="permissions" value="none"/>

<!--Access-->
<access origin="*"/>
    <!-- Added the following intents to support the removal of whitelist code from base cordova to a plugin -->
    <!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
<plugin name="cordova-plugin-whitelist" version="1" />
<allow-intent href="http://*/*" />
<allow-intent href="https://*/*" />
<allow-intent href="tel:*" />
<allow-intent href="sms:*" />
<allow-intent href="mailto:*" />
<allow-intent href="geo:*" />

<plugin name="cordova-plugin-splashscreen" source="npm" />
<preference name="SplashScreenDelay" value="7000" />

<!--Icons-->
<icon src="icon.png" gap:role="default"/>

<!--iOS-->
<icon src="Images/Icons/iOS/icon.png"            platform="ios"        width="57" height="57" />
<icon src="Images/Icons/iOS/icon-72.png"            platform="ios"        width="72" height="72" />
<icon src="Images/Icons/iOS/114.png"         platform="ios"        width="114" height="114" />
<icon src="Images/Icons/iOS/144.png"         platform="ios"        width="144" height="144" />

<!--Android-->
<icon src="Images/Icons/Android/ldpi.png" platform="android" qualifier="ldpi" />
<icon src="Images/Icons/Android/mdpi.png" platform="android" qualifier="mdpi" />
<icon src="Images/Icons/Android/hdpi.png" platform="android" qualifier="hdpi" />
<icon src="Images/Icons/Android/xhdpi.png" platform="android" qualifier="xhdpi" />
<icon src="Images/Icons/Android/xxhdpi.png" platform="android" qualifier="xxhdpi" />

<!--Splash Screens-->
 <splash src="splash.png"/> <!-- default 320x480 pixels -->

 <!-- iPhone and iPod touch -->
<splash src="Images/Icons/iOS/Splash/Default.png" platform="ios" width="320" height="480" />
<splash src="Images/Icons/iOS/Splash/Default@2x.png" platform="ios" width="640" height="960" />

<!-- iPhone 5 / iPod Touch (5th Generation) -->
<splash src="Images/Icons/iOS/Splash/Default-568h@2x.png" platform="ios" width="640" height="1136" />

<!-- iPad -->
<splash src="Images/Icons/iOS/Splash/Default-Portrait.png" platform="ios" width="768" height="1024" />
<splash src="Images/Icons/iOS/Splash/Default-Landscape.png" platform="ios" width="1024" height="768" />

<!-- Retina iPad -->
<splash src="Images/Icons/iOS/Splash/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
<splash src="Images/Icons/iOS/Splash/Default-Landscape@2x.png" platform="ios" width="2048" height="1536" />

<!--Android-->
<splash src="Images/Icons/Android/ldpisplash.png" platform="android" qualifier="ldpi" /> <!-- 200x320 -->
<splash src="Images/Icons/Android/mdpisplash.png" platform="android" qualifier="mdpi" /> <!-- 320x480 -->
<splash src="Images/Icons/Android/hdpisplash.png" platform="android" qualifier="hdpi" /> <!-- 480x800 -->
<splash src="Images/Icons/Android/xhdpisplash.png" platform="android" qualifier="xhdpi" /> <!-- 720x1280 -->
 
</widget>
